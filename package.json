{
  "name": "bookmarkdown",
  "version": "1.0.0",
  "description": "A simple and portable bookmark management service using GitHub Gist as data storage with Markdown format",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:lib": "vite build --config vite.lib.config.ts",
    "build:extension": "vite build --config vite.extension.config.ts",
    "build:web": "vite build --config vite.web.config.ts",
    "build:all": "npm run build && npm run build:lib && npm run build:extension && npm run build:web",
    "dev": "tsx watch web/src/lib/index.ts",
    "dev:web": "vite --config vite.web.config.ts",
    "start": "node dist/index.js",
    "test": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest",
    "test:core": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest test/core/",
    "test:react": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest test/react/",
    "test:unit": "cross-env NODE_OPTIONS=--max-old-space-size=8192 vitest test/core/ test/react/",
    "test:ui": "vitest --ui",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint web/src/lib --ext .ts,.tsx",
    "lint:fix": "eslint web/src/lib --ext .ts,.tsx --fix",
    "format": "prettier --write 'web/src/lib/**/*.{ts,tsx,json,md}'",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "bookmark",
    "markdown",
    "gist",
    "github",
    "chrome-extension"
  ],
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/react-router-dom": "^5.3.3",
    "clsx": "^2.1.1",
    "react": "^19.1.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.3",
    "uuid": "^9.0.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.254",
    "@types/node": "^20.10.5",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "eslint": "^8.56.0",
    "happy-dom": "^18.0.1",
    "jsdom": "^23.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.1.1",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.6.2",
    "typescript": "^5.8.3",
    "typescript-language-server": "^4.3.4",
    "vite": "^5.0.0",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^3.2.4"
  }
}
